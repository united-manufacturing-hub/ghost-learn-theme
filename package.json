{
	"name": "learn",
	"description": "A clean, minimal default theme for the Ghost Learning Management System",
	"demo": "https://learn.gthememarket.com/",
	"version": "2.4.0",
	"engines": {
		"ghost": ">=5.0.0"
	},
	"license": "MIT",
	"screenshots": {
		"desktop": "assets/screenshot-desktop.jpg",
		"mobile": "assets/screenshot-mobile.jpg"
	},
	"scripts": {
		"dev": "gulp",
		"zip": "gulp zip"
	},
	"author": {
		"name": "Themeix",
		"email": "support@themeix.org",
		"url": "https://themeix.com"
	},
	"gpm": {
		"type": "theme",
		"categories": [
			"Minimal",
			"Magazine"
		]
	},
	"keywords": [
		"ghost",
		"theme",
		"ghost-theme"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/TryGhost/Casper.git"
	},
	"bugs": "https://github.com/TryGhost/Casper/issues",
	"contributors": "https://github.com/TryGhost/Casper/graphs/contributors",
	"dependencies": {
		"@tryghost/content-api": "^1.11.4",
		"aos": "^2.3.4",
		"chart.js": "^3.8.0",
		"infinite-scroll": "^4.0.1",
		"jquery": "^3.6.1",
		"magnific-popup": "^1.1.0",
		"masonry-layout": "^4.2.2",
		"prismjs": "^1.29.0",
		"simptip": "^1.0.4",
		"slick-carousel": "^1.6.37",
		"tailwindcss": "^3.1.4"
	},
	"devDependencies": {
		"@fullhuman/postcss-purgecss": "5.0.0",
		"ansi-colors": "4.1.3",
		"concat": "1.0.3",
		"del": "6.0.0",
		"gulp": "4.0.2",
		"gulp-autoprefixer": "8.0.0",
		"gulp-clean": "0.4.0",
		"gulp-clean-css": "4.3.0",
		"gulp-concat": "2.6.1",
		"gulp-copy": "4.0.1",
		"gulp-inject": "5.0.5",
		"gulp-jshint": "2.1.0",
		"gulp-plumber": "1.2.1",
		"gulp-postcss": "9.0.1",
		"gulp-purgecss": "5.0.0",
		"gulp-rename": "2.0.0",
		"gulp-replace": "1.1.3",
		"gulp-sass": "5.1.0",
		"gulp-size": "4.0.1",
		"gulp-livereload": "4.0.2",
		"gulp-terser": "2.1.0",
		"gulp-uglify": "3.0.2",
		"gulp-update": "0.0.2",
		"gulp-zip": "5.1.0",
		"jshint": "2.13.5",
		"jshint-stylish": "2.2.1",
		"postcss": "8.4.31",
		"postcss-import": "15.0.0",
		"run-sequence": "2.2.1",
		"sass": "1.55.0"
	},
	"browserslist": [
		"defaults"
	],
	"config": {
		"posts_per_page": 12,
		"image_sizes": {
			"xxs": {
				"width": 30
			},
			"xs": {
				"width": 100
			},
			"s": {
				"width": 300
			},
			"m": {
				"width": 600
			},
			"l": {
				"width": 1000
			},
			"xl": {
				"width": 2000
			}
		},
		"card_assets": true,
		"custom": {
			"contact_form_action_url": {
				"type": "text",
				"default": "https://submit-form.com/4HaTaFxz"
			},
			"back_to_scroll": {
				"type": "boolean",
				"default": true
			},
			"footer_note": {
				"type": "text",
				"default": "- Learn. All rights reserved."
			},
			"post_share_enabled": {
				"type": "boolean",
				"group": "post",
				"default": true
			},
			"body_text_color": {
				"type": "color",
				"default": "#585F63"
			},
			"gradient_color2": {
				"type": "color",
				"default": "#74A9F3"
			},
			"color1": {
				"type": "color",
				"default": "#e5e7eb"
			},
			"color2": {
				"type": "color",
				"default": "#F1F6FD"
			}
		}
	},
	"renovate": {
		"extends": [
			"@tryghost:theme"
		]
	}
}
